#lang racket

(require 
  racket/list
  racket/gui
  "filerc.rkt")

(define F (new frame% [label "Pédiatrie: Audit Infirmières"]
	       [width 400]
	       [height 500]))

(define P (new vertical-panel%
			[parent F]
			[style '(auto-hscroll)]
			[alignment '(left center)]))


(define (multiple-checkbox text . locb)
  (define PP (new group-box-panel%
		  [parent P]
		  [label text]))

  (list
    P PP
    (for/list ([cb-text (in-list locb)])
	      (new check-box%
		   [parent PP]
		   [label cb-text]
		   [value #f]))))

(send F show #t)
